<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La Garita"
        android:id="@+id/Etapa_Pedidos"
        android:layout_below="@+id/Obra_Pedidos"
        android:layout_toRightOf="@+id/Check"
        android:layout_toEndOf="@+id/Check" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/Obra_Pedidos"
        android:textSize="21sp"
        android:textColor="#f65034"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/Check"
        android:layout_toEndOf="@+id/Check" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:id="@+id/Check"
        android:cropToPadding="false"
        android:src="@mipmap/ic_clear_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/Etapa_Pedidos"
        android:maxHeight="35dp"
        android:maxWidth="74dp"
        android:adjustViewBounds="true"
        />

</RelativeLayout>